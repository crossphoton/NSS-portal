<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link
      rel="shortcut icon"
      href="https://www.nicepng.com/png/full/944-9446351_the-symbol-for-the-nss-has-been-based.png"
      type="image/x-icon"
    />
    <title>NSS Portal</title>
    <link rel="stylesheet" href="css/styles.css" />
  </head>
  <body>
    <div class="navbar">
      <img
        src="/images/nss.png"
        alt="NSS logo"
      />
      <div><h2>NSS Hours Portal</h2></div>
      <img
        src="/images/iiitr.png"
        alt="IIIT Raichur logo"
      />
    </div>
    <div class="content">
      <div class="heading"><h3>Your Contribution to NSS</h3></div>
      <div class="profile">
        <div>Name: <%= info.name %></div>
        <div>Mail: <%= info.mail %></div>
      </div>
      <div class="heading">Total Hours Completed: <%= info.hrs %> Hours</div>
      <div class="table-wrapper">
        <h3>Events Attended</h3>
        <table class="table">
          <tbody>
            <tr>
              <th>Event Date</th>
              <th>Event Name</th>
              <th>Hours Awarded</th>
              <th>Category</th>
            </tr>
            <% for(var i=0; i<list.length; i++){ %>
              <tr>
                <td><%= list[i].date %></td>
                <td><%= list[i].name %></td>
                <td><%= list[i].hrs %></td>
                <td><%= list[i].category %></td>
              </tr>
            <% } %>
          </tbody>
        </table>
        <h3 class="cat">Category-wise Hours</h3>

        <table class="category table">
          <tbody>
            <tr>
              <th>Category</th>
              <th>Minimum Hours</th>
              <th>Hours Allotted</th>
            </tr>
            <% for(const [key, value] of Object.entries(cwhrs)){ %>
              <tr>
                <td><%= key %></td>
                <td><%= value.minhrs %></td>
                <td><%= value.hrs %></td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="footer">
      <div>Â©Copyright NSS IIITR 2021</div>
    </div>
  </body>
</html>
