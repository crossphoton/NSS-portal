<%- include('header') -%>
  <div class="table-wrapper">
    <h3>Volunteers</h3>
    <table class="table volunteers">
      <tbody>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Roll No</th>
          <th>Remove</th>
        </tr>
        <% for(var i=0; i<users.length; i++){ %>
          <tr>
            <td><%= users[i].name %></td>
            <td><%= users[i].email %></td>
            <td><%= users[i].rollno %></td>
            <td>
              <form id="form<%= i %>" action="/admin/delete_user" method="POST">
              <input type="hidden" name="email" value="<%= users[i].email %>"/>
            </form>
            <input form="form<%= i %>" type="submit" value="Remove" class="btn btn-danger"/>
          </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
  
  <script>
    var element = document.getElementById("volunteers");
    element.classList.add("active");
  </script>
<%- include('footer') -%>